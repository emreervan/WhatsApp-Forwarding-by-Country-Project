    <script>
        // √úlke bazlƒ± WhatsApp numaralarƒ± (√∂rnek)
        const countryNumbers = {
            'TR': {
                number: '+905551234567',
                name: 'T√ºrkiye',
                flag: 'üáπüá∑'
            },
            'UZ': {
                number: '+998901234567',
                name: '√ñzbekistan',
                flag: 'üá∫üáø'
            },
            'KZ': {
                number: '+77051234567',
                name: 'Kazakistan',
                flag: 'üá∞üáø'
            },
            'AZ': {
                number: '+994501234567',
                name: 'Azerbaycan',
                flag: 'üá¶üáø'
            },
            'KG': {
                number: '+996551234567',
                name: 'Kƒ±rgƒ±zistan',
                flag: 'üá∞üá¨'
            },
            'TJ': {
                number: '+992901234567',
                name: 'Tacikistan',
                flag: 'üáπüáØ'
            },
            'TM': {
                number: '+993651234567',
                name: 'T√ºrkmenistan',
                flag: 'üáπüá≤'
            },
            'DE': {
                number: '+491701234567',
                name: 'Almanya',
                flag: 'üá©üá™'
            },
            'US': {
                number: '+15551234567',
                name: 'Amerika',
                flag: 'üá∫üá∏'
            },
            'DEFAULT': {
                number: '+905551234567',
                name: 'Genel Destek',
                flag: 'üåç'
            }
        };

        async function getCountryFromIP() {
            try {
                // Birden fazla IP servisini dene
                const services = [
                    'https://ipapi.co/json/',
                    'https://api.ipify.org?format=json',
                    'https://ipinfo.io/json',
                    'https://ipwho.is/'
                ];

                let countryCode = null;
                
                // ƒ∞lk servisi dene (ipapi.co - √ºlke kodu verir)
                try {
                    const response = await fetch(services[0], { cache: 'no-store', mode: 'cors' });
                    const data = await response.json();
                    if (data.country_code) {
                        countryCode = data.country_code;
                    }
                } catch (e) {
                    console.log('ƒ∞lk servis ba≈üarƒ±sƒ±z:', e);
                }

                // Eƒüer ba≈üarƒ±sƒ±zsa ikinci servisi dene
                if (!countryCode) {
                    try {
                        const ipResponse = await fetch(services[1], { cache: 'no-store', mode: 'cors' });
                        const ipData = await ipResponse.json();
                        
                        // IP ile √ºlke tespiti i√ßin ipinfo.io kullan
                        const geoResponse = await fetch(`https://ipinfo.io/${ipData.ip}/json`, { cache: 'no-store', mode: 'cors' });
                        const geoData = await geoResponse.json();
                        
                        if (geoData.country) {
                            countryCode = geoData.country;
                        }
                    } catch (e) {
                        console.log('ƒ∞kinci servis ba≈üarƒ±sƒ±z:', e);
                    }
                }

                // √ú√ß√ºnc√º yedek: ipwho.is (CORS destekli)
                if (!countryCode) {
                    try {
                        const whoResponse = await fetch(services[3], { cache: 'no-store', mode: 'cors' });
                        const whoData = await whoResponse.json();
                        if (whoData && (whoData.country_code || whoData.country_code_alpha2)) {
                            countryCode = (whoData.country_code || whoData.country_code_alpha2);
                        }
                    } catch (e) {
                        console.log('√ú√ß√ºnc√º servis ba≈üarƒ±sƒ±z:', e);
                    }
                }

                return countryCode;
            } catch (error) {
                console.error('IP servisleri ba≈üarƒ±sƒ±z:', error);
                return null;
            }
        }

        function updateUI(countryCode) {
            const locationText = document.getElementById('locationText');
            const whatsappBtn = document.getElementById('whatsappBtn');
            let statusTitleEl = document.querySelector('.status h2');
            if (!statusTitleEl) {
                // G√ºvenli: Eksikse geri olu≈ütur
                const statusContainer = document.querySelector('.status');
                statusContainer.innerHTML = '<h2></h2><div class="country-info"><div class="loading"></div><span id="locationText">L√ºtfen bekleyin...</span></div>';
                statusTitleEl = document.querySelector('.status h2');
            }

            if (countryCode && countryNumbers[countryCode]) {
                const countryData = countryNumbers[countryCode];
                
                statusTitleEl.textContent = 'Konumunuz Tespit Edildi!';
                locationText.innerHTML = `
                    <span class="flag">${countryData.flag}</span>
                    <strong>${countryData.name}</strong>
                `;

                // WhatsApp URL'sini olu≈ütur
                const message = encodeURIComponent(`Merhaba! ${countryData.name} √ºzerinden size ula≈üƒ±yorum.`);
                const whatsappUrl = `https://wa.me/${countryData.number.replace('+', '')}?text=${message}`;
                // Butonu g√∂r√ºn√ºr ve tƒ±klanabilir yap (popup engelleyicilere kar≈üƒ±)
                whatsappBtn.href = whatsappUrl;
                whatsappBtn.style.display = 'inline-flex';
                whatsappBtn.textContent = 'WhatsApp\'a git';
                
                // Otomatik y√∂nlendirme
                setTimeout(() => {
                    statusTitleEl.textContent = 'WhatsApp\'a Y√∂nlendiriliyorsunuz...';
                    locationText.innerHTML = `
                        <div class="loading"></div>
                        <span>L√ºtfen bekleyin...</span>
                    `;
                    
                    // 2 saniye sonra WhatsApp'a y√∂nlendir
                    setTimeout(() => {
                        window.location.href = whatsappUrl;
                    }, 2000);
                }, 1000);
                
            } else {
                // Varsayƒ±lan numara kullan
                const defaultData = countryNumbers['DEFAULT'];
                
                statusTitleEl.textContent = 'Varsayƒ±lan Desteƒüe Y√∂nlendiriliyorsunuz';
                locationText.innerHTML = `
                    <span class="flag">${defaultData.flag}</span>
                    <strong>${defaultData.name}</strong>
                `;

                const message = encodeURIComponent('Merhaba! Size ula≈ümak istiyorum.');
                const whatsappUrl = `https://wa.me/${defaultData.number.replace('+', '')}?text=${message}`;
                // Butonu g√∂r√ºn√ºr ve tƒ±klanabilir yap (popup engelleyicilere kar≈üƒ±)
                whatsappBtn.href = whatsappUrl;
                whatsappBtn.style.display = 'inline-flex';
                whatsappBtn.textContent = 'WhatsApp\'a git';
                
                // Otomatik y√∂nlendirme
                setTimeout(() => {
                    statusTitleEl.textContent = 'WhatsApp\'a Y√∂nlendiriliyorsunuz...';
                    locationText.innerHTML = `
                        <div class="loading"></div>
                        <span>L√ºtfen bekleyin...</span>
                    `;
                    
                    // 2 saniye sonra WhatsApp'a y√∂nlendir
                    setTimeout(() => {
                        window.location.href = whatsappUrl;
                    }, 2000);
                }, 1000);
            }
        }

        function showError() {
            const statusTitleEl = document.querySelector('.status h2');
            const locationText = document.getElementById('locationText');
            if (statusTitleEl) {
                statusTitleEl.textContent = 'Konum tespit edilemedi';
            }
            if (locationText) {
                locationText.textContent = 'Varsayƒ±lan desteƒüe y√∂nlendirileceksiniz.';
            }
            updateUI('DEFAULT');
        }

        // Sayfa y√ºklendiƒüinde √ßalƒ±≈üacak fonksiyon
        async function init() {
            try {
                // Konum tespiti yap
                const countryCode = await getCountryFromIP();
                
                // 2 saniye bekle (kullanƒ±cƒ± deneyimi i√ßin)
                await new Promise(resolve => setTimeout(resolve, 2000));
                
                if (countryCode) {
                    updateUI(countryCode);
                    console.log('Tespit edilen √ºlke:', countryCode);
                } else {
                    throw new Error('√úlke tespit edilemedi');
                }
            } catch (error) {
                console.error('Hata:', error);
                showError();
            }
        }

        // Sayfa y√ºklendiƒüinde ba≈ülat
        document.addEventListener('DOMContentLoaded', function() {
            init();
        });

        // Debug i√ßin console'a log yaz
        console.log('WhatsApp Y√∂nlendirme Sistemi Ba≈ülatƒ±ldƒ±');
        console.log('Mevcut √ºlkeler:', Object.keys(countryNumbers));
    </script>
